<div class="container">

  <h1><%= @cocktail.name %></h1>

<ul>
  <% @cocktail.doses.each do |dose| %>
   <li><%= dose.ingredient.name %>: <%=dose.description %><%= link_to "Delete", dose_path(dose), method: :delete %></li>
   <% end %>
</ul>

<h2>Add a new dose to your cocktail</h2>

<%= simple_form_for [@cocktail, @dose] do |f| %>
  <%= f.input :ingredient_id, collection: Ingredient.all %>
  <%= f.input :description %>

  <%= f.button :submit %>
<% end %>

<p><%= link_to "Add a new dose", new_cocktail_dose_path(@cocktail) %></p>



<%= link_to "Back to the list of cocktails", cocktails_path(@cocktail) %>

</div>
